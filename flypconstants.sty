% Plank constant
\newcommand{\hJs}{\SI{6.626070150-34}{\joule\second}}
\newcommand{\hbarJs}{\SI{1.054571800e-34}{\joule\second}}

% Boltzmann constant
\newcommand{\kBSI}{\SI{1.38064852e-23}{\joule\per\kelvin}}
